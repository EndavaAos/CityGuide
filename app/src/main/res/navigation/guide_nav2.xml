<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/guide_nav2"
    app:startDestination="@id/seeTripFragment">

    <fragment
        android:id="@+id/seeTripFragment"
        android:name="com.example.cityguide.presentation.SavedTrip.SeeTripFragment"
        android:label="SeeTripFragment"
        android:tag="seeTrip"
        tools:layout="@layout/fragment_see_trip">
        <action
            android:id="@+id/navigationFromSavedTripToPOIDetails"
            app:destination="@id/poiDetailsFragment2" />
        <action
            android:id="@+id/navigationFromSavedTripToMaps"
            app:destination="@id/mapsFragment" />
    </fragment>
    <fragment
        android:id="@+id/poiDetailsFragment2"
        android:name="com.example.cityguide.presentation.POIDetails.PoiDetailsFragment2"
        android:label="PoiDetailsFragment2"
        android:tag="poiDetails">
        <argument
            android:name="trip"
            app:argType="com.example.cityguide.data.db.entity.Trips$Trip" />
        <action
            android:id="@+id/navigationFromPoiDetailsToSavedTrip"
            app:destination="@id/seeTripFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.cityguide.presentation.TripMap.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />
</navigation>