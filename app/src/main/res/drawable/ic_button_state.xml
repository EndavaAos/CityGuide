<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/button_pressed_start_color_midnight"
                android:endColor="@color/button_pressed_end_color_midnight"/>

            <padding android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"/>

            <corners android:radius="20dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="@color/button_disabled_start_color_midnight"
                android:endColor="@color/button_disabled_end_color_midnight"/>

            <padding android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"/>

            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="@color/button_start_color_midnight"
                android:endColor="@color/button_end_color_midnight"/>

            <padding android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"/>

            <corners android:radius="20dp" />
        </shape>
    </item>

</selector>