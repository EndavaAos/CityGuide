<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">



    <androidx.appcompat.widget.AppCompatButton
        android:visibility="invisible"
        android:id="@+id/scheduleTripButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/button_schedule_trip_margin_horizontal"
        android:background="@drawable/ic_button_state"
        android:layout_marginBottom="@dimen/button_schedule_trip_margin_bottom"
        android:alpha="0.95"
        android:text="@string/button_schedule_trip_text"
        android:textSize="@dimen/home_screen_search_qustion"
        android:textColor="@color/primary_text_color"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/scroll_view_margin_bottom">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayoutTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/poi_screen_title_height">

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/backArrowButton"
                    android:layout_width="@dimen/back_arrow_width"
                    android:layout_height="@dimen/back_arrow_height"
                    android:layout_marginStart="@dimen/back_arrow_margin"
                    android:src="@drawable/ic_back_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/locationNameText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/grade_cursive"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_text_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:visibility="invisible"
                app:cardElevation="@dimen/card_elevation_error"
                android:id="@+id/tripNotFoundCard"
                android:layout_marginTop="@dimen/card_margins_error"
                android:layout_below="@id/constraintlayoutTitle"
                android:layout_marginHorizontal="@dimen/card_margins_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius_error"
                app:cardBackgroundColor="@color/black_20">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageTripNotFound"
                        android:layout_width="@dimen/image_dimensions_error"
                        android:layout_height="@dimen/image_dimensions_error"
                        android:src="@drawable/ic_trip_not_found"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/image_margin_top_error"
                        app:tint="@color/primary_text_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/destination_not_found_text"
                        android:textSize="@dimen/text_error_size"
                        android:layout_below="@+id/imageTripNotFound"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/text_error_margin_bottom"
                        android:textColor="@color/secondary_text_color"
                        android:id="@+id/destNotFoundText"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/destNotFoundText"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/text_error_size2"
                        android:layout_marginBottom="@dimen/text_error_margin_bottom2"
                        android:gravity="center"
                        android:text="@string/error_text_sugestion"/>




                </RelativeLayout>


            </androidx.cardview.widget.CardView>



            <TextView
                android:visibility="invisible"
                android:id="@+id/poiText"
                android:layout_below="@+id/constraintlayoutTitle"
                android:textSize="@dimen/text_poi_size"
                android:fontFamily="@font/proxima_nova_alt_bold"
                android:text="Points of Interest"
                android:layout_marginLeft="@dimen/text_poi_margins"
                android:textColor="@color/secondary_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:visibility="invisible"
                android:id="@+id/descriptionText"
                android:layout_below="@+id/poiText"
                android:fontFamily="@font/proxima_nova_alt_light"
                android:textSize="@dimen/text_poi_description_size"
                android:text="@string/description_poi_text"
                android:layout_marginLeft="@dimen/text_poi_margins"
                android:textColor="@color/primary_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_poi_margins"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_below="@+id/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

    </ScrollView>

        </RelativeLayout>

