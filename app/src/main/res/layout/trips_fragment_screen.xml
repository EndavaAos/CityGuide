<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:paddingBottom="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".presentation.trips.MyTripsFragment">

        <TextView
            android:id="@+id/my_trips_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_margin_medium"
            android:gravity="center"
            android:text="@string/trips_preview_list"
            android:textColor="@color/primary_text_color"
            android:fontFamily="@font/grade_cursive"
            android:textSize="@dimen/title_size_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/trips_active" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/trips_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="trips_active"
            tools:layout="@layout/trips_fragment_general_trip" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/trips_upcoming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="trips_upcoming"
            tools:layout="@layout/trips_fragment_general_trip" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/trips_completed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_margin_medium"
            android:tag="trips_completed"
            tools:layout="@layout/trips_fragment_general_trip" />

    </LinearLayout>

</ScrollView>