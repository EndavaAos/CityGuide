<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_margin="@dimen/poi_card_margin"
        app:cardCornerRadius="@dimen/poi_card_corner_radius"
        android:layout_width="match_parent"
        android:layout_height="@dimen/poi_card_height"
        android:clickable="true"
        app:cardBackgroundColor="@color/cardview_background_state"
        app:cardElevation="@dimen/poi_card_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="45dp"
                android:layout_marginStart="@dimen/poi_linear_layout_margin"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/poi_name_text_margin"
                    android:textColor="@color/primary_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/categoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/tag_shape"
                    android:paddingHorizontal="@dimen/poi_category_text_padding_horizontal"
                    android:gravity="center"
                    android:paddingVertical="@dimen/poi_category_text_padding_vertical"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/poi_category_text_size" />


            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_caret_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>